<UserControl x:Class="CinemaPlus.Views.UserControls.AdminSide.AdminHomePageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaPlus.Views.UserControls.AdminSide"
             mc:Ignorable="d" 
             Height="873"
             Width="1500"
             d:DesignHeight="873" 
             d:DesignWidth="1500"
             Background="{DynamicResource firstColor}"
             VerticalAlignment="Top"
             HorizontalAlignment="Center">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top"
                        Margin="0,50,0,0">
                <RadioButton Height="150" Command="{Binding EditMovieCommand}" Style="{StaticResource MyRadioButtonStyle}" Width="400" IsChecked="True" DockPanel.Dock="Top">EDIT MOVIE</RadioButton>
                <RadioButton Height="150" Command="{Binding AddMovieCommand}" Style="{StaticResource MyRadioButtonStyle}" Width="400" DockPanel.Dock="Top">ADD MOVIE</RadioButton>
            </StackPanel>

            <StackPanel Name="AdminPage"
                    Orientation="Vertical"
                    Height="Auto">
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
